---
const { href, class: className, ...props } = Astro.props;
const isActive = href === Astro.url.pathname.replace(/\/$/, '');
---

<a href={href} class:list={[className, { active: isActive }]} {...props}>
  <slot />
</a>
<style>
	a {
		text-decoration: none;
	}
	a.active {
		font-weight: bolder;
	}
</style>
